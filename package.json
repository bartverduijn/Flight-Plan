{
	"private": true,
	"name": "flightplan",
	"description": "TODO list app",
	"author": "Bart Verduijn",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bartverduijn/Flight-Plan/issues"
	},
	"homepage": "https://github.com/bartverduijn/Flight-Plan#readme",
	"prisma": {
		"seed": "node --require esbuild-register prisma/seed.ts"
	},
	"scripts": {
		"build": "npm run build:css && remix build",
		"build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/generated.css",
		"dev": "concurrently \"npm run dev:css\" \"remix dev\"",
		"dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/generated.css --watch",
		"postinstall": "remix setup node",
		"start": "remix-serve build",
		"lint": "eslint .",
		"prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
		"format": "npm run prettier -- --write",
		"validate": "npm run lint && npm run prettier -- --list-different",
		"prepare": "husky install .husky",
		"pre-commit": "lint-staged"
	},
	"dependencies": {
		"@heroicons/react": "^1.0.5",
		"@prisma/client": "^3.7.0",
		"@reach/menu-button": "^0.16.2",
		"@reach/skip-nav": "^0.16.0",
		"@reach/visually-hidden": "^0.16.0",
		"@remix-run/react": "^1.1.1",
		"@remix-run/serve": "^1.1.1",
		"clsx": "^1.1.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"remix": "^1.1.1",
		"tailwindcss": "^3.0.8",
		"tiny-invariant": "^1.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.1.1",
		"@types/react": "^17.0.38",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.8.1",
		"@typescript-eslint/parser": "^5.8.1",
		"concurrently": "^6.5.1",
		"esbuild-register": "^3.3.1",
		"eslint": "^8.5.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "^2.5.1",
		"prisma": "^3.7.0",
		"typescript": "^4.5.4"
	},
	"engines": {
		"node": ">=14"
	},
	"sideEffects": false
}
